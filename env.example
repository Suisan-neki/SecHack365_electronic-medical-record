# 患者情報共有システム - 環境変数設定例
# このファイルをコピーして .env として使用してください

# === セキュリティ設定 ===
# Flaskの秘密鍵（本番環境では強力なランダム文字列に変更）
SECRET_KEY=your-secret-key-here-change-in-production

# WebAuthn設定
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=患者情報共有システム
WEBAUTHN_ORIGIN=http://localhost:5001

# === サーバー設定（安全なデフォルト） ===
# ホスト設定（デフォルト: 127.0.0.1 = ローカルのみ）
HOST=127.0.0.1

# ポート設定
PORT=5001

# デバッグモード（本番環境では必ずFalse）
FLASK_DEBUG=False

# SSL使用（開発環境ではFalse、本番ではTrue）
USE_SSL=False

# === データベース設定 ===
# データベースURL（現在はJSONファイルを使用）
DATABASE_URL=sqlite:///patient_info.db

# === 暗号化設定 ===
# 暗号化キーのパスフレーズ（本番環境では強力なパスフレーズに変更）
ENCRYPTION_KEY_PASSPHRASE=your-encryption-passphrase-here

# === サーバー設定 ===
# サーバーポート
PORT=5001
HOST=0.0.0.0

# === 開発設定 ===
# デバッグモード（本番環境では False に設定）
FLASK_DEBUG=True
FLASK_ENV=development

# === 監査ログ設定 ===
# ログレベル
LOG_LEVEL=INFO

# === 外部API設定（将来的な拡張用） ===
# FHIRサーバーURL
FHIR_SERVER_URL=https://fhir.example.com/fhir

# 通知サービス設定
NOTIFICATION_SERVICE_URL=https://notification.example.com
NOTIFICATION_API_KEY=your-notification-api-key

# === セキュリティポリシー設定 ===
# セッションタイムアウト（秒）
SESSION_TIMEOUT=3600

# パスワードポリシー
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=True
REQUIRE_NUMBERS=True
REQUIRE_UPPERCASE=True

# === アクセシビリティ設定 ===
# デフォルトのアクセシビリティ設定
DEFAULT_LARGE_TEXT=False
DEFAULT_FURIGANA=False
DEFAULT_SIMPLE_MODE=False
DEFAULT_MULTILANG=False
